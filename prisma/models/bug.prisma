model Bug {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  description   String
  client_log   String
  server_log   String

  device          Device    @relation(fields: [device_id], references: [id])
  device_id       String    @db.ObjectId

  created_at  DateTime    @default(now())
  updated_at  DateTime    @updatedAt
  @@map("bugs")
}