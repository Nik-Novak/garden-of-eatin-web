generator client {
  provider = "prisma-client"
  output   = "../.generated/prisma"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

generator zod {
  provider = "prisma-zod-generator"
  output   = "./validation" // or wherever you want
  templatePath = ""
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}